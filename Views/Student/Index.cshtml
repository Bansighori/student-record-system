@model List<StudentRecordSystem.Models.Student>

<!DOCTYPE html>
<html>
<head>
    <title>Student Records</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>ðŸŽ“ Welcome, @ViewBag.Faculty</h1>
    <a asp-controller="Faculty" asp-action="Logout">Logout</a>

    <form asp-action="Add" method="post">
        <input type="number" name="RollNo" placeholder="Roll No" required />
        <input type="text" name="Name" placeholder="Name" required />
        <input type="number" name="Marks" placeholder="Marks" required />
        <button type="submit">Add Student</button>
    </form>

    <h2>Your Students</h2>
    <table>
        <tr><th>Roll No</th><th>Name</th><th>Marks</th><th>Action</th></tr>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.RollNo</td>
                <td>@s.Name</td>
                <td>@s.Marks</td>
                <td><a asp-action="Delete" asp-route-rollNo="@s.RollNo">Delete</a></td>
            </tr>
        }
    </table>
</body>
</html>
